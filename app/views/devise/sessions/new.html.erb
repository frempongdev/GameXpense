
<%= render 'shared/formnav', back_path: :back, nav_text: 'LOG IN' %>

<div class="form-wrapper">

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
    <div class="form-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input-field" %>
    </div>

    <div class="form-field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "input-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-field">
        <%= f.check_box :remember_me, class: "remember-me-checkbox" %>
        <%= f.label :remember_me, class: "remember-me-label" %>
      </div>
    <% end %>


    <div class="form-actions">
      <%= f.submit "Next", class: "submit-button" %>
    </div>
  <% end %>

</div>
